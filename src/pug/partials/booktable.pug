    .container 
        +sectionTitle("Book a"," Table", true,"Ut possimus qui ut temporibus culpa velit eveniet modi omnis est adipisci expedita at voluptas atque vitae autem.")
        form(class="book-table-form p-4 mt-5")
            .form-row
                +input("text","Your Name","name","col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4","px-5 py-4")
                +input("email","Your Email","email","col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4","px-5 py-4")
                +input("tel","Your Phone","phone","col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4","px-5 py-4")
                +input("text","Date","date","col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4","px-5 py-4")
                +input("text","Time","time","col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4","px-5 py-4")

                    textarea(name="message", cols="30", rows="10") 
                div(class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 px-5 py-4 text-center")
                    a(href="index.html", class="btn btn-fill rounded-pill") Send Message 
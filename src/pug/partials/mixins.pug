mixin dropdownItem()
    a(class="dropdown-item py-3", href="#")='Action 1'

mixin navbarItem(href="index.html", content="Home", isActive, isDropdown, isButton)
    if(isActive)
        li(class="nav-item active pl-4")
            a(class="nav-link text-white" href=href)=content
    else if(isDropdown)
        li(class="nav-item dropdown pl-4")
            a(class="nav-link text-white dropdown-toggle", href="#", id="tabletDropdown", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")="Dropdown"
            div(class="dropdown-menu", aria-labelledby="tabletDropdown")
                +dropdownItem
                +dropdownItem
                +dropdownItem 
    else if(isButton)
        li(class="nav-item pl-4")
            a(class="btn rounded-pill btn-fill", href=href)=content    
    else
        li(class="nav-item pl-4")
            a(class="nav-link text-white" href=href)=content

mixin introductionContent(haveSpanTitle, title="Hiếu Nguyễn", titleColor="Minh Hiếu", description="Hiếu Hiếu")

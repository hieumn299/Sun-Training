block mixins
	include ../partials/mixins
block vars
	-title = 'Site'
	-bodyClass = ''
	-des=""

doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		title=title
		//- mô tả
		meta(name="description", content=des)
		//- chủ để trang
		meta(name="keywords", content="Dịch vụ nhà hàng chất lượng cao")
		meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1.0")
		link(rel="icon", href="./images/favicon.png", type="image/x-icon", sizes="16x16")
		link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous")
		link(rel="preconnect", href="https://fonts.googleapis.com")
		link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
		link(href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,700;1,300&family=Satisfy&display=swap", rel="stylesheet")
		link(rel="stylesheet", href="scss/fontawesome.css")
		link(rel="stylesheet", href="scss/reset.css")
		link(rel="stylesheet", href="scss/styles.css")
	body(class=bodyClass)
		main.main
			block header
				include ../partials/header
			block container
			block footer
				include ../partials/footer
		include ../partials/scripts